<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegisterActivity">

    <TextView
        android:id="@+id/register_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to Mooditude"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:inputType="text"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_email"
        android:hint="Enter Your Email Here!"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_textView" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:inputType="text"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_username"
        android:hint="Enter Your Username Here!"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Enter Your Password Here!"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_username" />

    <EditText
        android:id="@+id/register_password_2"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Enter Your Password Again!"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_password" />

    <Button
        android:id="@+id/register_join_now_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/join_now_button"
        android:text="Join Now"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_password_2" />

    <TextView
        android:id="@+id/register_textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="By clicking, Join Now, you agree to"
        android:textColor="#000000"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_join_now_button" />

    <TextView
        android:id="@+id/register_textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Moodtter's User Agreement, Privacy Policy,"
        android:textColor="#000000"
        app:fontFamily="sans-serif-light"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="615dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_textView2"/>

    <TextView
        android:id="@+id/register_textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="and Cookie Policy"
        android:textColor="#000000"
        app:fontFamily="sans-serif-light"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="644dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_textView3"/>

</androidx.constraintlayout.widget.ConstraintLayout>